
<!DOCTYPE html>
<html>
<head>
    <link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    @* Navbar *@
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#">Asp.Net Core Ornek</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link " asp-action="Sepet" asp-controller="Home">Sepetim<span class="sr-only">(current)</span></a>
                    </li>


                </ul>
            </div>
        </div>
    </nav>
    @* Navbar *@
    <div class="mt-2">
        @* Ekranı kaplaması için yazdık *@
        <div class="container-fluid">@RenderBody()</div>

    </div>
    <script src="~/jquery/jquery.min.js"></script>
    <script src="~/twitter-bootstrap/js/bootstrap.min.js"></script>

    @* Jquery için tanımladık true deseydik heryerde kullanmak zorunda olurduk *@
    @RenderSection("JavaScript", false)
</body>
</html>
