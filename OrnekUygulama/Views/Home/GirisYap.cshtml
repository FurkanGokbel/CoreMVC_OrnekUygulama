@model KullaniciGirisModel
<form asp-action="GirisYap" method="post" class="p-4 w-50 mx-auto shadow">
    <div class="form-group">
        <label>Kullanici Ad: </label>
        <span asp-validation-for="@Model.KullaniciAd" class="text-danger"></span>
        <input type="text" asp-for="@Model.KullaniciAd" class="form-control" />
    </div>
    <div class="form-group">
        <label>Sifre: </label>
        <span asp-validation-for="@Model.Sifre" class="text-danger"></span>
        <input type="password" asp-for="@Model.Sifre" class="form-control" />
    </div>
    <div class="form-check">
        <input type="checkbox" asp-for="@Model.BeniHatirla" class="form-check-input" />
        <label asp-for="BeniHatirla" class="form-check-label">Beni Hatırla</label>

    </div>
    @* "all" dersek hataların hepsini bir daha gösterir *@
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <button type="submit" class="btn btn-block btn-info">Giriş Yap</button>

    </div>
</form>
@*Bu işlemler, yapma nedenimiz sunucu tarafına gitmeden client tarafında halletmek *@

@section JavaScript{

    <script src="~/jqueryValid/jquery.validate.min.js"></script>
    <script src="~/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}